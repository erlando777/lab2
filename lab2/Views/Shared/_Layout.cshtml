<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Moodle</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body style="background-color:#E6E6E6">
    <div class="container" style="width:90%; max-width:1600px">
        <div class="bg-white" style="border-top: 4px solid #40a697;">
            <img src="~/Content/icon.jpg" width="200px" height="100px" class="px-3 py-2" />
            <nav class="navbar navbar-expand-xl navbar-light" style="background-color:#575151">
                <ul class="nav navbar-nav">
                    <li class="px-2">
                        @Html.ActionLink("Pradžia", "Index", "Home", null, new { Style = "color:#40a697;" })
                    </li>
                </ul>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarText" aria-controls="navbarText" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarText">
                    <ul class="nav navbar-nav">
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" style="color:#40a697" id="scroll" role="button" data-toggle="dropdown" aria-expanded="false">
                                Studentai
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="scroll">
                                <li class="dropdown-item">
                                    @Html.ActionLink("Pagrindinis", "Index", "students", null, new { Style = "color:#40a697" })
                                </li>
                                <li class="dropdown-item">
                                    @Html.ActionLink("Pridėti studentą", "Create", "students", null, new { Style = "color:#40a697" })
                                </li>
                            </ul>
                        </li>
                    </ul>
                    <ul class="nav navbar-nav">
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" style="color:#40a697" id="scroll" role="button" data-toggle="dropdown" aria-expanded="false">
                                Moduliai
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="scroll">
                                <li class="dropdown-item">
                                    @Html.ActionLink("Pagrindinis", "Index", "modules", null, new { Style = "color:#40a697" })
                                </li>
                                <li class="dropdown-item">
                                    @Html.ActionLink("Pridėti modulį", "Create", "modules", null, new { Style = "color:#40a697" })
                                </li>
                            </ul>
                        </li>
                    </ul>
                    <ul class="nav navbar-nav">
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" style="color:#40a697" id="scroll" role="button" data-toggle="dropdown" aria-expanded="false">
                                Paskaitos
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="scroll">
                                <li class="dropdown-item">
                                    @Html.ActionLink("Pagrindinis", "Index", "lectures", null, new { Style = "color:#40a697" })
                                </li>
                                <li class="dropdown-item">
                                    @Html.ActionLink("Pridėti paskaitą", "Create", "lectures", null, new { Style = "color:#40a697" })
                                </li>
                            </ul>
                        </li>
                    </ul>
                    <ul class="nav navbar-nav">
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" style="color:#40a697" id="scroll" role="button" data-toggle="dropdown" aria-expanded="false">
                                Modulių ryšiai
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="scroll">
                                <li class="dropdown-item">
                                    @Html.ActionLink("Pagrindinis", "Index", "studentModules", null, new { Style = "color:#40a697" })
                                </li>
                                <li class="dropdown-item">
                                    @Html.ActionLink("Pridėti modulį studentui", "Create", "studentModules", null, new { Style = "color:#40a697" })
                                </li>
                            </ul>
                        </li>
                    </ul>
                </div>
            </nav>
        </div>
        
        <div class="container-fluid body-content bg-white" style="min-height:520px; max-height:1500px">
            @RenderBody()
            <footer class="container-fluid fixed-bottom text-center bg-dark" style="width:88%; border-top: 4px solid #40a697;">
                <p class="text-white">&copy; @DateTime.Now.Year - Justas</p>
            </footer>
        </div>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
