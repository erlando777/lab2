@model IEnumerable<lab2.Models.studentModule>

@{
    ViewBag.Title = "Index";
}

<h2 class="pt-2">Studento ir modulio sąryšiai</h2>

<p class="border rounded bg-light px-1" style="width:182px">
    @Html.ActionLink("Pridėti modulį studentui", "Create", null, new { Style = "color:green;text-decoration:none" })
</p>
<table class="table">
    <tr>
        <th>
            Modulio kodas
        </th>
        <th>
            Modulio pavadinimas
        </th>
        <th>
            Studento vardas
        </th>
        <th>
            Studento pavardė
        </th>

        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.module.ModuleCode)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.module.ModuleTitle)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.student.StudentName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.student.StudentSurname)
            </td>
            <td>
                @Html.ActionLink("Koreguoti", "Edit", new { id = item.ConnectionID }) |
                @Html.ActionLink("Informacija", "Details", new { id = item.ConnectionID }) |
                @Html.ActionLink("Ištrinti", "Delete", new { id = item.ConnectionID })
            </td>
        </tr>
    }

</table>
<hr />
@Html.ActionLink("Pradžia", "Index", "Home")
